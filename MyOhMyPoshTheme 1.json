{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "white",
          "properties": {
            "fetch_version": false
          },
          "style": "plain",
          "template": "({{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }})",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightBlue",
          "style": "diamond",
          "template": " ",
          "type": "text"
        },
        {
          "foreground": "red",
          "style": "diamond",
          "template": "<f></f> ",
          "type": "root"
        },
        {
          "foreground" : "lightBlue",
          "style": "plain",
          "template": "<f>DAVID</f> <darkGray>/</><lightGreen>{{ .HostName }}</> ",
          "type": "session"
        },
        {
          "foreground": "white",
          "properties": {
            "style": "full"
          },
          "style": "accordion",
          "template": "<darkGray>in </>{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "yellow",
          "style": "diamond",
          "template": "<darkGray>on</> GIT:{{ .HEAD }} ",
          "type": "git"
        },
        {
          "foreground": "darkGray",
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }} ",
          "type": "time",
          "properties": {
            "time_format": "15:04"
          }
        },
        {
          "foreground": "red",
          "style": "plain",
          "template": "\n <u>ERROR</u>{{ if gt .Code 0 }}{{ $error := '' }}{{ end }} ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightRed",
          "style": "diamond",
          "template": "",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
